<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TitleTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/text_view_padding</item>
        <item name="android:textSize">@dimen/text_size_huge</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TitleTextView.Light" parent="TitleTextView">
        <item name="android:textColor">@color/text_color_light</item>
    </style>

    <style name="TitleTextView.Dark" parent="TitleTextView">
        <item name="android:textColor">@color/text_color_dark</item>
    </style>

    <style name="SubTitleTextView.Light" parent="TitleTextView.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="SubTitleTextView.Dark" parent="TitleTextView.Dark">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="CellTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">@dimen/base_margin</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="CellTextView.Light" parent="CellTextView">
        <item name="android:textColor">@color/text_color_light</item>
    </style>

    <style name="CellTextView.Dark" parent="CellTextView">
        <item name="android:textColor">@color/text_color_dark</item>
    </style>

    <style name="Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">@dimen/base_margin</item>
        <item name="android:text">Button</item>
    </style>

    <style name="Button.Dark">
        <item name="android:background">@drawable/button_background_solid_dark</item>
        <item name="android:textColor">@color/text_color_light</item>
    </style>

    <style name="Button.Light">
        <item name="android:background">@drawable/button_background_solid_light</item>
        <item name="android:textColor">@color/text_color_light</item>
    </style>

</resources>
